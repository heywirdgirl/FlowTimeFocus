rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    match /users/{userId} {
      // User profile
      allow read, write: if isOwner(userId);
      
      // âœ… FIX: Match the path used in code
      match /privateCycles/{cycleId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      // Training history
      match /trainingHistory/{historyId} {
        allow read, write: if isOwner(userId);
      }
      
      // Audio library
      match /audioLibrary/{assetId} {
        allow read, write: if isOwner(userId);
      }
      
      // Settings (if you add this later)
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Public cycles (for social feed - add later)
    match /publicCycles/{cycleId} {
      allow read: if true;
      allow create, update, delete: if isAuthenticated() 
        && request.resource.data.authorId == request.auth.uid;
    }
    
    // Official templates
    match /officialTemplates/{templateId} {
      allow read: if true;
      // Only admins can write (set via Firebase Console)
      allow write: if false;
    }
  }
}