rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read public cycles
    match /cycles/{cycleId} {
      allow read: if resource.data.isPublic == true;
      
      // Allow logged-in users to create cycles
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;
        
      // Allow logged-in users to read, update, and delete their own cycles
      allow read, update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }
  }
}
