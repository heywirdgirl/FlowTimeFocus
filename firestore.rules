rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ✅ Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ✅ Validate PublicProfile schema
    function isValidPublicProfile(data) {
      return data.keys().hasAll(['uid', 'username', 'displayName'])
        && data.uid is string
        && data.username is string
        && data.username.size() >= 3
        && data.username.size() <= 30
        && data.displayName is string
        && (!data.keys().hasAny(['avatarUrl']) || data.avatarUrl is string)
        && (!data.keys().hasAny(['bio']) || data.bio is string);
    }
    
    // ✅ Validate Cycle schema
    function isValidCycle(data) {
      return data.keys().hasAll(['name', 'phases', 'userId'])
        && data.name is string
        && data.name.size() >= 1
        && data.name.size() <= 100
        && data.phases is list
        && data.phases.size() >= 1
        && data.phases.size() <= 20
        && data.userId is string;
    }
    
    // ✅ Users collection
    match /users/{userId} {
      allow read: if true; // Public profile
      allow create: if isOwner(userId) && isValidPublicProfile(request.resource.data);
      allow update: if isOwner(userId) && isValidPublicProfile(request.resource.data);
      
      // Private cycles
      match /privateCycles/{cycleId} {
        allow read, write: if isOwner(userId) && isValidCycle(request.resource.data);
      }
    }
    
    // ✅ Public cycles
    match /publicCycles/{cycleId} {
      allow read: if true;
      allow create: if isAuthenticated() 
        && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() 
        && resource.data.authorId == request.auth.uid;
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() 
          && resource.data.userId == request.auth.uid;
      }
    }
    
    // ✅ Official templates
    match /officialTemplates/{templateId} {
      allow read: if true;
      allow write: if false; // Admin only via console
    }
    
    // ✅ User activity
    match /userActivity/{activityId} {
      allow read: if true;
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid;
    }
  }
}